{% extends 'layouts/page-base.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
  {% if formattedUser == null %}
      <h1 class="govuk-heading-xl">No session found.</h1>
      <a class="govuk-link" href="/login">Login to DEFRA</a>
  {% else %}
      <h1 class="govuk-heading-xl">Session details</h1>
      <h3 class="govuk-heading-m">User JWT details</h3>
      <pre>{{ formattedUser | escape }}</pre>
  {% endif %}
    </div>
  </div>
{% endblock %}
